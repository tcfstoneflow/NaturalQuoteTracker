# Environment Configuration Template
# Copy this file to .env and update values for your environment

# Application Environment
NODE_ENV=development
PORT=5000

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/natural_stone_crm
PGHOST=localhost
PGPORT=5432
PGUSER=postgres
PGPASSWORD=password
PGDATABASE=natural_stone_crm

# Authentication & Security
JWT_SECRET=your-super-secret-jwt-key-change-in-production-minimum-32-characters
JWT_EXPIRES_IN=7d
SESSION_SECRET=your-super-secret-session-key-change-in-production-minimum-32-characters

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Email Services
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@domain.com
SMTP_PASS=your-app-password

# External API Services (Optional)
OPENAI_API_KEY=sk-your-openai-api-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
SENDGRID_API_KEY=SG.your-sendgrid-api-key

# Constant Contact (Optional)
CONSTANT_CONTACT_API_KEY=your-constant-contact-api-key
CONSTANT_CONTACT_CLIENT_ID=your-constant-contact-client-id
CONSTANT_CONTACT_CLIENT_SECRET=your-constant-contact-client-secret

# Monitoring & Logging
LOG_LEVEL=info
HEALTH_CHECK_URL=http://localhost:5000/health

# Backup Configuration
BACKUP_WEBHOOK_URL=https://your-monitoring-service.com/webhooks/backup

# Production-only Variables (set in production environment)
# COMPANY_EMAIL=quotes@yourcompany.com
# SSL_CERT_PATH=/path/to/ssl/cert
# SSL_KEY_PATH=/path/to/ssl/key